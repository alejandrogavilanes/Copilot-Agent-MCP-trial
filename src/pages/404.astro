---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found - The Urlist">
  <main class="min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8">
    <div class="max-w-max mx-auto text-center">
      <p class="text-sm font-semibold text-brand-600 uppercase tracking-wide">404 error</p>
      <h1 class="mt-2 text-4xl font-extrabold text-gray-900 tracking-tight sm:text-5xl">
        Page not found
      </h1>
      <p class="mt-2 text-lg text-gray-500">
        The page you are looking for could not be found.
      </p>
      <div class="mt-6">
        <a
          href="/"
          class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-brand-600 hover:bg-brand-700"
        >
          Go back home
        </a>
      </div>
    </div>
  </main>
</Layout>